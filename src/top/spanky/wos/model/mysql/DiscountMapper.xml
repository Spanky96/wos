<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.spanky.wos.model.Discount">

    <resultMap type="Discount" id="dicountMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="dis_price" property="disPrice"/>
        <result column="restrict_price" property="restrictPrice"/>
        <result column="type" property="type"/>
    </resultMap>

    <select id="getAll" resultMap="dicountMap">
        <![CDATA[
            SELECT * FROM discounts WHERE id != 1 AND is_deleted = 0;
        ]]>
    </select>

    <select id="getByID" parameterType="int" resultMap="dicountMap">
        <![CDATA[
           SELECT * FROM discounts WHERE id = #{id};
        ]]>
    </select>
    
     <select id="getByUserDiscountId" parameterType="int" resultMap="dicountMap">
        <![CDATA[
           SELECT * FROM discounts WHERE id = (SELECT discount_id FROM user_discount WHERE id = #{discountId});
        ]]>
    </select>
    

    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="Discount">
        <![CDATA[
        INSERT INTO discounts 
        (id, name, description, dis_price, restrict_price, type)
         VALUES (#{id}, #{name}, #{description}, #{disPrice}, #{restrictPrice}, #{type});
        ]]>
    </insert>

    <update id="update" parameterType="Discount">
       <![CDATA[
            UPDATE discounts 
            SET 
                name = #{name},
                description = #{description},
                dis_price = #{disPrice},
                restrict_price = #{restrictPrice}
            WHERE 
                id = #{id}
        ]]>
    </update>

    <update id="deleteById" parameterType="int">
       <![CDATA[
            UPDATE discounts SET is_deleted = 1 WHERE id = #{id};
        ]]>
    </update>
</mapper>
