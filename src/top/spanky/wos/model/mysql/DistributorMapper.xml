<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.spanky.wos.model.Distributor">

    <resultMap type="Distributor" id="distributorMapper">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="phone" property="phone"/>
    </resultMap>

    <select id="getAll" resultMap="distributorMapper">
        <![CDATA[
            SELECT * FROM distributors WHERE is_deleted=0;
        ]]>
    </select>

    <select id="getByID" parameterType="int" resultMap="distributorMapper">
        <![CDATA[
            SELECT * FROM distributors WHERE id = #{id};
        ]]>
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="Distributor">
        <![CDATA[
        INSERT INTO distributors (name, phone) VALUES (#{name}, #{phone});
        ]]>
    </insert>
    
    <update id="update" parameterType="Distributor">
       <![CDATA[
            UPDATE distributors SET name = #{name}, phone = #{phone} WHERE id = #{id};
        ]]>
    </update>
    
    <update id="deleteById" parameterType="int">
       <![CDATA[
            UPDATE distributors SET is_deleted = 1 WHERE id = #{id};
        ]]>
    </update>
</mapper>
