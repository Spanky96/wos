<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>weixin</display-name>
  <welcome-file-list>
    <welcome-file>static/main.html</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/static/404.html</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/static/400.html</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/static/refused.html</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/static/500.html</location>
  </error-page>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:applicationContext.xml</param-value>
  </context-param>
  <listener>
   <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
   <filter>
    <filter-name>AppContextFilter</filter-name>
    <filter-class>top.spanky.wos.web.filter.AppContextFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AppContextFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>top.spanky.wos.web.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>
  <!--
  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>top.spanky.wos.web.filter.SessionFilter</filter-class>
    <init-param>
      <param-name>notNeedLoginPage</param-name>
      <param-value>page/login,page/logout</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/page/*</url-pattern>
  </filter-mapping>
  -->
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <description>mvc.xml</description>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:wos-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>